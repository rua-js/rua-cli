#!/usr/bin/env node
'use strict'

// Dependency
const terminal = require('commander'),
      chalk = require('chalk'),
      _ = require('lodash'),
      { spawnSync } = require('child_process'),
      Git = require('../lib/Git').default,
      Console = require('../lib/Console').default

// Settings / Variables
const settings = require('../package').rua

terminal
  .usage('[commit message]')
  .parse(process.argv)

const defaultCommitMessage = terminal.args.join(' ') || _.get(settings, 'commitMessage')

try {
  Git.commit(defaultCommitMessage)
} catch (e) {
  console.log(chalk.red('[Rua-Cli] An Error Occurred!'))
  throw e
}

Console.done()